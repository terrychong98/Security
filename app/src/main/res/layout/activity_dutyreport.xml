<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/show3"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:text="Security Name :"
                android:textColor="#000000"
                android:gravity="right"/>

            <TextView
                android:id="@+id/textViewSecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/show3"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:text="Chong Zi Yi"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/show"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/show3"
                android:gravity="right"
                android:paddingBottom="3dp"
                android:text="Check IN Time : "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewSecurity"
                android:layout_toRightOf="@id/show"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:text="01/01/2019 8:50PM"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/show2"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/show"
                android:gravity="right"
                android:paddingBottom="3dp"
                android:text="Check OUT Time : "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewIC2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewName2"
                android:layout_toRightOf="@id/show2"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:text="01/01/2019 8:50PM"
                android:textColor="#000000" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>